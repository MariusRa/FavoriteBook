@model IEnumerable<Book>

@{
    ViewData["Title"] = "UserListBooks";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Books List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Search new Book</a>
        </div>

        <form asp-controller="Private" asp-action="UserListBooks" class="form-row col-auto">

            <div class="col-8">
                <input type="text" name="searchString" placeholder="Enter Book Title" class="form-control" />
            </div>
            <div class="col-4">
                <input type="submit" value="Filter" class="btn btn-secondary form-control" />
            </div>

        </form>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr style="text-align:center">
                    <th>
                        @Html.ActionLink("Title", "UserListBooks", new { sortOrder = ViewBag.NameSortParm }) <i class="fa fa-sort" aria-hidden="true"></i>
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    if (book.IsRead == true)
                    {
                        <tr>
                            <td width="30%">@book.Title  <span class="badge bg-success">Read</span></td>
                            <td width="20%">@book.Genre</td>
                            <td width="40%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Private" asp-action="BookDetails" asp-route-Id="@book.BookId" class="btn btn-primary mx-1">More</a>
                                    <a asp-controller="Private" asp-action="isRead" asp-route-Id="@book.BookId" class="btn btn-secondary mx-1">Is Read</a>
                                    <form method="post" asp-action="DeleteUserBook" asp-controller="Private" asp-route-Id="@book.BookId">
                                        <input asp-for="@book.BookId" hidden />
                                        <input type="submit" class="btn btn-info w-100" value="Delete" />
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td width="30%">@book.Title</td>
                            <td width="20%">@book.Genre</td>

                            <td width="40%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Private" asp-action="BookDetails" asp-route-Id="@book.BookId" class="btn btn-primary mx-1">More</a>
                                    <a asp-controller="Private" asp-action="isRead" asp-route-Id="@book.BookId" class="btn btn-warning mx-1">Is Read</a>
                                    <form method="post" asp-action="DeleteUserBook" asp-controller="Private" asp-route-Id="@book.BookId">
                                        <input asp-for="@book.BookId" hidden />
                                        <input type="submit" class="btn btn-info w-100" value="Delete" />
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Books yet</p>
    }
    <p>
        Total books: @Model.Count()
    </p>
</div>

