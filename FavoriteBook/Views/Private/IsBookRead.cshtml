@model Membership
@{
    ViewData["Title"] = "IsBookRead";
}

<form method="post" asp-action="IsBookRead">
    <input asp-for="Book.BookId" hidden />
    <div class="border offset-1 p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Book is read?</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <div class="col">
                        @*<label asp-for="IsRead"></label>*@
                        <select asp-for="IsBookRead" class="form-select" aria-label="Default select example">
                            <option selected>Open this select menu</option>
                            <option value="true">Read</option>
                            <option value="false">Not read</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Save" />
                        </div>
                        <div class="col">
                            <a asp-controller="Private" asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

