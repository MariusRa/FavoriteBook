@model Book

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border offset-1 p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Book</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <div class="col-6">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Author"></label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Genre"></label>
                        <select asp-for="Genre" class="form-select border col-12 p-2" aria-label="Default select example">
                            <option selected></option>
                            <option value="Literary Fiction">Literary Fiction</option>
                            <option value="Mystery">Mystery</option>
                            <option value="Thriller">Thriller</option>
                            <option value="Horror">Horror</option>
                            <option value="Historical">Historical</option>
                            <option value="Romane">Romane</option>
                            <option value="Western">Western</option>
                            <option value="Bildungsroman">Bildungsroman</option>
                            <option value="Speculative Fiction">Speculative Fiction</option>
                            <option value="Science Fiction">Science Fiction</option>
                            <option value="Fantasy">Fantasy</option>
                            <option value="Dystopian">Dystopian</option>
                            <option value="Magical Realism">Magical Realism</option>
                            <option value="Realist Literature">Realist Literature</option>
                        </select>
                        @*<input asp-for="Genre" class="form-control" />*@
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Published"></label>
                        <input asp-for="Published" class="form-control" />
                        <span asp-validation-for="Published" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Pages"></label>
                        <input asp-for="Pages" class="form-control" />
                        <span asp-validation-for="Pages" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="CoverUrl"></label>
                        <input asp-for="CoverUrl" class="form-control" />
                        <span asp-validation-for="CoverUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-controller="Book" asp-action="ListBooks" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

