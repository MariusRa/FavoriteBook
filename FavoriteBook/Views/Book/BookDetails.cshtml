@model Book

@{
    ViewData["Title"] = "BookDetails";
}

<div>
    <h2>About Book</h2>
    <table class="table">
        <tbody>
            <tr>
                <td>Title</td>
                <td>@Model.Title</td>
                <td rowspan="5"> <img src="@Model.CoverUrl" alt="Book cover" /></td>
            </tr>
            <tr>
                <td>Author</td>
                <td>@Model.Author</td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>@Model.Genre</td>
            </tr>
            <tr>
                <td>Pages</td>
                <td>@Model.Pages</td>
            </tr>
            <tr>
                <td>Published</td>
                <td>@Model.Published</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-danger" asp-controller="Book" asp-action="ListBooks"> <i class="fa fa-undo" aria-hidden="true"></i>  Back to Books List </a>
</div>

