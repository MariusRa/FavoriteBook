@model FavoriteBook.viewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>
                              
                                <form asp-action="Login" class="mx-1 mx-md-4">
                                    @if (ViewBag.Message != null)
                                    {
                                        <div>
                                            <p class="text-danger">@ViewBag.Message</p>
                                        </div>
                                    }

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="@Model.Email" id="form3Example3c" class="form-control" placeholder="Your Email" />
                                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="@Model.Password" id="form3Example4c" class="form-control" placeholder="Password" />
                                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block">Sign In</button>
                                    </div>
                                    <div style="text-align: right">
                                        <label>New to?</label>
                                        <a class="badge badge-danger" asp-controller="Auth" asp-action="Registration">Create an account</a>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


